    <p id="wynik"></p>



    <script>

        const btn = document.querySelector("but")
        btn.addEventListener("click", function(){
            let szerokosc = document.querySelector("szerokosc").value
            let dlugosc = document.querySelector("dlugosc").value

            if(szerokosc > 0 || dlugosc > 0){
                let powierzchnia = szerokosc * dlugosc
                let panel = document.querySelector("input[name = r1]:checked").value
                let montaz = powierzchnia * panel
                wynik
            }

        })
    </script>
